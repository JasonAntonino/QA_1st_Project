[Unit]
Description=Flask App Service
[Service]
User=jenkins
WorkingDirectory=/opt/flask-app
EnvironmentFile=/opt/flask-app/flask.env
ExecStart=/bin/sh -c 'cd /opt/flask-app && . ./venv/bin/activate && python3 create.py && python3 -m pytest --cov=application/ --cov-report term-missing && gunicorn --workers=4 --bind=0.0.0.0:5000 app:app'
[Install]
WantedBy=multi-user.target